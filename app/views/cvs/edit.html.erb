<div class="row">
  <div class="columns">
    <h2 class="info">c.v. for <%= @user %></h2>

    <%= form_for @cv, url: update_cv_path(@user.username) do |f| %>
      <div class="wmd-panel">
        <div id="wmd-button-bar"></div>
        <%= f.text_area :markdown, id: 'wmd-input', class: 'wmd-input' %>
        <button class="button">
          <%= fa_icon 'save', text: 'Save' %>
        </button>
        <hr>
        <small class="info">Preview:</small>
        <div id="wmd-preview" class="callout wmd-panel wmd-preview"></div>
        <br>
        <br>
        <br>
      </div>
    <% end %>

    <%= content_for :extra_stylesheets do %>
      <%= stylesheet_link_tag 'wmd/wmd' %>
    <% end %>

    <%= content_for :extra_scripts do %>
      <%= javascript_include_tag 'wmd/Markdown.Converter' %>
      <%= javascript_include_tag 'wmd/Markdown.Sanitizer' %>
      <%= javascript_include_tag 'wmd/Markdown.Editor' %>
    <% end %>

  </div>
</div>

<%= content_for :inline_script do %>
  <script type="text/javascript">
    (function() {
      var converter = Markdown.getSanitizingConverter();
      var editor = new Markdown.Editor(converter);
      editor.run();
    })();
  </script>
<% end %>
