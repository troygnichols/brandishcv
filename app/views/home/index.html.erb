<% unless logged_in? %>
    <%= content_for :header do %>
        <div class="container returning-users-login">
          <span class="login-label">Have an account?</span>
          <%= form_tag admin_login_path do %>
              <input type="text" name="username_or_email" placeholder="Username or email"/>
              <input type="password" name="password" placeholder="Password"/>
              <input type="submit" value="Login" class="btn btn-small"/>
          <% end %>
        </div>
    <% end %>
<% end %>

<div class="home-container">
  <h2>Welcome to brandishcv.net</h2>

  <div class="dictionary">
    <blockquote>
      <p>brandish: to exhibit in an ostentatious or aggressive manner<p>
      <small>Merriam-Webster</small>
    </blockquote>
  </div>

  <p>
    You can post your CV or resume here and everyone can see it.
    <br/>Maybe someone will even hire you.
  </p>

  <p><%= link_to "OK let's get started!", admin_signup_path, class: "btn btn-large" %></p>

  <%# TODO: should randomly select a user to show %>
  <p><%= link_to 'See an example...', show_cv_path('troynichols') %></p>
</div>

