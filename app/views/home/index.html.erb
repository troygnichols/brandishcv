<% unless logged_in? %>
  <%= content_for :header do %>
    <div class="top-bar">
      <%= image_tag 'orange_cat.png', class: 'navbar-logo float-left' %>
      <div class="row">
        <div class="columns small-10 small-offset-1">
          <%= form_tag admin_login_path, class: 'navbar-login-form' do %>
            <div class="row">
              <div class="column small-3 instructions">
                <small>Have an account?</small>
              </div>
              <div class="column small-3">
                <%= text_field_tag :username_or_email, nil, placeholder: 'Username or email' %>
              </div>
              <div class="column small-3">
                <%= password_field_tag :password, nil, placeholder: 'Password' %>
              </div>
              <div class="column small-1">
                <%= submit_tag 'Login', class: 'button small' %>
              </div>
              <div class="column small-2 forgot-password-text">
                <%= link_to 'Forgot password?', new_admin_password_reset_path %></a>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

