<%= content_for :extra_stylesheets do %>
    <%= stylesheet_link_tag 'wmd/wmd' %>
<% end %>

<%= content_for :extra_scripts do %>
    <%= javascript_include_tag 'wmd/Markdown.Converter' %>
    <%= javascript_include_tag 'wmd/Markdown.Sanitizer' %>
    <%= javascript_include_tag 'wmd/Markdown.Editor' %>
<% end %>

<h2>Markdown Editor</h2>
<p>
  This is just an editor for experimenting with markdown.  Nothing here is persistent.
</p>
<div class="wmd-panel">
  <div id="wmd-button-bar"></div>
  <textarea id="wmd-input" class="wmd-input">*Type your markdown stuff here*</textarea>
  <div id="wmd-preview" class="wmd-panel wmd-preview"></div>
</div>

<%= content_for :inline_script do %>
    <script type="text/javascript">
      $(function() {
          var converter = Markdown.getSanitizingConverter();
          var editor = new Markdown.Editor(converter);
          editor.run();
      });
    </script>
<% end %>