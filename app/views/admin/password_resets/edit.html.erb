<div class="row">
  <div class="column small-6 small-offset-3">
    <h1>Reset Password</h1>

    <% if @user.errors.any? %>
      <div class="callout alert">
        <h2>Bad password</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_tag admin_password_reset_path(params[:id]), method: 'put' do %>
      <%= password_field_tag :password, nil, placeholder: 'New password' %>
      <%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm password' %>
      <%= submit_tag "Update Password", class: "button" %>
    <% end %>
  </div>
</div>
